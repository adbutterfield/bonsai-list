<div class="row">
  <div id="filter-bar" class="small-12 columns panel">
    <div class="row">
      <%= render partial: "shared/category_accordion_mobile" %>
      <div class="small-12 medium-6 large-4 columns">
        <div class="small-6 medium-5 columns no-padding">
          <p class="left-label">Order by:</p>
        </div>
        <div class="small-6 columns no-padding">
          <%= select_tag :sort, options_for_select([["Newest", "created_at desc"], ["Low Price", "price asc"], ["High Price", "price desc"]], ), :id => 'sort_listing', :class => 'filter-sort' %>
        </div>
        <div class="medium-1 columns filter-pipe hide-for-small">
          <span>|</span>
        </div>
        <hr class="hide-for-medium-up hr-order-by-mobile" />
      </div>
      <div class="small-12 medium-6 large-3 columns distance-filter-padding">
        <div class="small-6 columns no-padding">
          <p class="hide-for-small distance-label">Distance:</p>
          <p class="hide-for-medium-up mobile-distance-label">Distance:</p>
        </div>
        <div class="small-6 columns no-padding">
          <%= select_tag :distance_filter, options_for_select([["All", "10000"], ["500 mi", "500"], ["100 mi", "100"], ["50 mi", "50"]], ), :id => 'distance_filter', :class => 'filter-sort' %>
        </div>
        <hr class="hide-for-medium-up hr-distance-mobile" />
      </div>
      <div class="small-12 medium-12 large-5 columns">
      <hr class="show-for-medium-only hr-distance-medium" />
        <div class="row collapse">
          <div id="filter-search" class="small-9 columns">
            <%= text_field_tag :search, params[:search], :class => "marketplace-search", :placeholder => "Search" %>
          </div>
          <div class="small-3 columns">
            <%= submit_tag "Search", :class => "postfix product-search-button bon-button", id: "search-button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>