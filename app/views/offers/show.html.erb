<div class="row">
  <div class="small-12 medium-4 columns">
    <%= render partial: "shared/home_nav" %>
  </div>
  <div class="small-12 medium-8 columns">
    <% if @listing.listing_images.empty? %>
      <img src="http://placehold.it/610x610&text=[img]">
    <% else %>
      <%= image_tag(@listing.main_image) %>
    <% end %>
    <%= render partial: "shared/pricing_table" %>

    <div class="row">
      <div class="small-12 columns panel">
        <h4>New Offers!</h4>
      </div>
    </div>
    <div class="row">
      <%= (render partial: 'inquiry', collection: @new_inquiries) || no_offers %>
    </div>
    <div class="row">
      <div class="small-12 columns panel">
        <h4>Seen Offers</h4>
      </div>
    </div>
    <div class="row">
      <%= (render partial: 'inquiry', collection: @seen_inquiries) || no_offers %>
    </div>
  </div>
</div>
