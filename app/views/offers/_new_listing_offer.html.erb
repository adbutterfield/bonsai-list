<div class="small-3 medium-2 columns message-pic">
  <a href="#"><img src="http://placehold.it/50x50&text=[img]" /></a>
</div>
<div class="small-9 medium-10 columns message-block left">
  <p class="message-name"><%= listing.headline %></p>
  <!-- <p class="message-date">Tuesday 2:45 PM</p> -->
  <div class="row">
    <div class="small-12 columns">
    <% if listing.is_offer? %>
      <p><em><%= link_to pluralize(listing.inquiries.not_seen.count, "Offer") << '!', offer_path(listing) %></em></p>
    <% else %>
      <p><em><%= link_to pluralize(listing.inquiries.not_seen.count, "Person") << ' Interested!', offer_path(listing)%></em></p>
    <% end %>
    </div>
  </div>
</div>
<hr />