<div class="row">
  <div class="small-12 medium-4 columns">
    <%= render partial: "shared/home_nav" %>
  </div>
  <div class="small-12 medium-7 large-8 columns">
    <div class="row">
      <div class="small-12 columns panel">
        <h4>New Offers!</h4>
      </div>
    </div>
    <div class="row">
      <%= (render partial: 'new_listing_offer', collection: @new_listing_offers, as: :listing) || no_offers %>
    </div>
    <div class="row">
      <div class="small-12 columns panel">
        <h4>Seen Offers</h4>
      </div>
    </div>
    <div class="row">
      <%= (render partial: 'seen_listing_offer', collection: @seen_listing_offers, as: :listing) || no_offers %>
    </div>
  </div>
</div>
