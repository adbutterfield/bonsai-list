<div class="small-3 medium-2 columns listing-thumb">
  <% if listing.pics.empty? %>
    <%= link_to image_tag("http://placehold.it/50x50&text=[img]", :class => "th"), listing_path(listing) %>
  <% else %>
    <%= link_to image_tag(listing.thumb_image, :class => "th"), listing_path(listing) %>
  <% end %>
</div>
<div class="small-9 medium-10 columns offer-block">
  <p class="message-name"><%= link_to listing.headline, listing_path(listing) %></p>
  <div class="row">
    <div class="small-12 columns">
      <p>Inquiry sent: <%= listing.inquiry_sent_date(current_user) %></p>
    </div>
  </div>
</div>
<hr />