<div class="panel">
  <div class="row">
    <div class="small-4 columns home-nav-box">
      <a href="#"><img class="home-nav-pic" src="http://placehold.it/300x300&text=[img]" /></a>
    </div>
    <div class="small-8 columns home-nav-name">
      <p><%= current_user.full_name %></p>
    </div>
  </div>
  <div class="row">
    <div id="home-nav" class="small-12 columns">
      <!-- <hr class="home-nav-hr" />
      <h5 class="title"><i class="fi-list-thumbnails"></i> <%#= link_to "Feed", user_root_path %></h5> -->
      <hr class="home-nav-hr" />
      <h5 class="title"><i class="fi-home"></i> <%= link_to_unless_current "Home", user_root_path %></h5>
      <hr class="home-nav-hr" />
      <h5 class="title"><i class="fi-price-tag"></i> <%= link_to_unless_current "My Listings", listings_path %></h5>
      <hr class="home-nav-hr" />
      <h5 class="title"><i class="fi-mail"></i> <%= link_to_unless_current "Messages", messages_path %></h5>
      <% if messages_page? %>
        <ul id="mailbox-links">
          <li>Inbox</li>
          <li><%= link_to_unless_current "Sent", sent_path, remote: true %></li>
          <li><%= link_to_unless_current "Trash", trash_path, remote: true %></li>
        </ul>
      <% end %>
      <hr class="home-nav-hr" />
      <h5 class="title"><i class="fi-burst-sale"></i> <%= link_to_unless_current "Offers", offers_index_path %></h5>
      <hr class="home-nav-hr" />
      <h5 class="title"><i class="fi-widget"></i> <%= link_to_unless_current "Settings", edit_user_registration_path %></h5>
      <!-- <h5 class="title"><a href="#"><i class="fi-photo"></i> Photos</a></h5>
      <hr class="home-nav-hr" />
      <h5 class="title"><a href="#"><i class="fi-torsos"></i> Connections</a></h5> -->
    </div>
  </div>
</div>