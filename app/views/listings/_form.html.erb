<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label "Category" %><br>
    <%= f.collection_radio_buttons :category_id, @categories, :id, :name, {checked: @categories.first.id}, { id: 'categories_radio' } %>
  </div>

  <div class="field">
    <%= f.label "Sub-category" %><br>
    <div id="subcategories_radio" >
      <%#= f.collection_check_boxes :subcategory_id, @subcategories, :id, :name %>
      <%= f.collection_radio_buttons :subcategory_id, @subcategories, :id, :name %>
    </div>
  </div>

  <div class="field">
    <%= f.label :shippable, "Willing to ship?" %><br>
    <%= f.check_box :shippable %>
  </div>
  <div class="field">
    <%= f.label :publish, "Publish now?" %><br>
    <%= f.check_box :publish %>
  </div>

  <div class="actions">
    <%= f.submit "Save Listing" %>
  </div>
<% end %>
