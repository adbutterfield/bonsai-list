<div class="row">
  <div class="small-12 medium-4 columns">
    <%= render partial: "shared/home_nav" %>
  </div>
  <div class="small-12 medium-8 columns">
    <h4><%= @messages.first.subject %></h4>
    <hr />
    <div id="message-box" class="row">
      <%= render partial: 'receipt', collection: @messages, as: :message %>
    </div>
    <div class="row">
      <%= form_tag reply_message_path do %>
        <div class="small-9 columns">
          <%= text_area(:reply, :body, size: 20, placeholder: "Write a message...") %>
        </div>
        <div class="small-2 small-pull-1 columns no-padding">
          <%= submit_tag "Reply", :class => "button tiny bon-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

