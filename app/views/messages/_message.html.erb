<div class="small-3 medium-2 columns message-pic">
  <% if sent_box? %>
    <% if recipient(conversation).avatar.present? %>
      <%= link_to image_tag(recipient(conversation).avatar.thumb), user_marketplace_path(recipient(conversation)) %>
    <% else %>
      <%= link_to image_tag("http://placehold.it/50x50&text=[img]"), user_marketplace_path(recipient(conversation)) %>
    <% end %>
  <% else %>
    <% if conversation.messages.last.sender.avatar.present? %>
      <%= link_to image_tag(conversation.messages.last.sender.avatar.thumb), user_marketplace_path(conversation.messages.last.sender) %>
    <% else %>
      <%= link_to image_tag("http://placehold.it/50x50&text=[img]"), user_marketplace_path(conversation.messages.last.sender) %>
    <% end %>
  <% end %>
</div>
<div class="small-9 medium-10 columns message-block left">
  <div class="row">
    <div class="small-10 columns">
      <% if sent_box? %>
        <p class="message-name"><%= truncate(recipient(conversation).full_name, length: 33) %></p>
      <% else %>
        <p class="message-name"><%= truncate(conversation.messages.last.sender.full_name, length: 33) %></p>
      <% end %>
    </div>
    <% if not_trash? %>
      <div class="small-1 columns">
        <%= link_to "<i class='fi-trash'></i>".html_safe, trash_message_path(conversation), :class => "trash-link", method: :post, data: { confirm: 'Are you sure you want to trash this message?' } %>
      </div>
    <% end %>
    <div class="small-12 columns">
      <p class=" <%= 'read_message' unless conversation.receipts_for(current_user).first.is_unread? %>"><%= link_to conversation.subject, message_path(conversation) %></p>
    </div>
    <div class="small-12 columns">
      <p class="message-date"><%= conversation.messages.last.created_at.in_time_zone(current_user.timezone).strftime('%A %b %e %l:%M %P') %></p>
    </div>
  </div>
</div>
<hr />