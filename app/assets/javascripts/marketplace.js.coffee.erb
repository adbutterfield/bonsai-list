$ ->
  $(document).on 'change', ['#sort_listing', '#mobile_sort_listing', '#distance_filter', '#mobile_distance_filter', '#get_zip'], (evt) ->
    category = $('#listings').data('categoryId')
    subcategory = $('#listings').data('subcategoryId')
    sortValue = $('#sort_listing option:selected').val()
    distanceValue = $('#distance_filter option:selected').val()
    visitorPostcode = $('#get_zip').val()

    $.ajax
      url: 'ajax_sort',
      type: 'GET'
      dataType: 'script'
      data: {
        category_id: category
        subcategory_id: subcategory
        sort: sortValue
        distance_filter: distanceValue
        visitor_postcode: visitorPostcode
      }
